    "id": "3",
    "jsonrpc": "2.0",
    "method": "message/stream",
    "params": {
        "id": "sendsubscribeTaskId6",
        "message": {
            "role": "user",
            "parts": [
                {
                    "kind": "text",
                    "text": "Hello, world!"
                }
            ]
        }
    }
}

