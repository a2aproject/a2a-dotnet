@host = http://localhost:5048

### Send an task to the echo agent
POST {{host}}/echo
Content-Type: application/json

{
    "id": "3",
    "jsonrpc": "2.0",
    "method": "task/send",
    "params": {
        "id": "12345",
        "message": {
            "role": "user",
            "parts": [
                {
                    "type": "text",
                    "text": "Hello, world!"
                }
            ]
        }
    }
}

