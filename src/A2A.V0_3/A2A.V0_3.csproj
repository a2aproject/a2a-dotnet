<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net8.0</TargetFrameworks>
        <IsAotCompatible>true</IsAotCompatible>

        <!-- NuGet Package Properties -->
        <PackageId>A2A.V0_3</PackageId>
        <Description>.NET SDK for the Agent2Agent (A2A) protocol v0.3 (legacy).</Description>
        <PackageTags>Agent2Agent;a2a;agent;ai;llm;aspnetcore</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <!-- System.Text.Json is in-box for net10.0 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
        <PackageReference Include="System.Text.Json" />
    </ItemGroup>

    <!-- Dependencies needed by all -->
    <ItemGroup>
        <InternalsVisibleTo Include="A2A.AspNetCore" Key="" />
        <InternalsVisibleTo Include="A2A.V0_3.UnitTests" Key="" />
        <PackageReference Include="Microsoft.Extensions.ExtraAnalyzers">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Extensions.AI.Abstractions" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
        <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <!-- In-box starting with .NET 10 -->
    <ItemGroup Condition="!$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net10.0'))">
        <PackageReference Include="System.Linq.AsyncEnumerable" />
        <PackageReference Include="System.Net.ServerSentEvents" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
